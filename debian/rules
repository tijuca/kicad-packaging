#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
# Make sure no svn parts inside the deb
DH_ALWAYS_EXCLUDE=CVS:.svn

# This has to be exported to make some magic below work.
export DH_OPTIONS

# .NOTPARALLEL:

# get patch & unpatch targets for dpatch
include /usr/share/dpatch/dpatch.make

build: build-arch build-indep

build-arch: build-arch-stamp
build-arch-stamp: patch

	$(MAKE) -f makefile.gtk DEBUG=0
	touch $@

build-indep: build-indep-stamp
build-indep-stamp: patch

	touch $@

clean: clean-patched unpatch
clean-patched:
	dh_testdir
	dh_testroot
	rm -f build-arch-stamp build-indep-stamp
	$(MAKE) -f makefile.gtk clean
	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i
	dh_installdocs
	dh_installmenu -a
	$(MAKE) -f makefile.gtk install-res PREFIX=$(CURDIR)/debian/kicad-common/usr
	$(MAKE) -C help -f makefile de PREFIX=$(CURDIR)/debian/kicad-doc-de/usr
	$(MAKE) -C help -f makefile en PREFIX=$(CURDIR)/debian/kicad-doc-en/usr
	$(MAKE) -C help -f makefile es PREFIX=$(CURDIR)/debian/kicad-doc-es/usr
	$(MAKE) -C help -f makefile fr PREFIX=$(CURDIR)/debian/kicad-doc-fr/usr
	$(MAKE) -C help -f makefile it PREFIX=$(CURDIR)/debian/kicad-doc-it/usr
	$(MAKE) -C help -f makefile pt PREFIX=$(CURDIR)/debian/kicad-doc-pt/usr
	$(MAKE) -C help -f makefile ru PREFIX=$(CURDIR)/debian/kicad-doc-ru/usr
	dh_install -i

install-arch:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_installdirs -s
	$(MAKE) -f makefile.gtk install-bin PREFIX=$(CURDIR)/debian/kicad/usr
	dh_installdocs
	dh_install -s

# Build architecture independant packages.
binary-indep: build-indep install-indep
	dh_testdir
	dh_testroot
	dh_installchangelogs -i
	dh_desktop
	dh_link -i
	dh_strip -i
# i don't want the helpfiles to be compressed
	dh_compress -i --exclude=kicad/help
# i don't want the examples to be compressed so moved after dh_compress
	dh_installexamples -i
	dh_fixperms -i
	dh_makeshlibs -i
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture dependant packages.
binary-arch: build-arch install-arch
	dh_testdir
	dh_testroot
	dh_installchangelogs -s change_log.txt
	dh_installman -s $(CURDIR)/debian/man/*.1
	dh_link -s
	dh_strip -s
	dh_compress -s
#	dh_installexamples -s
	dh_fixperms -s
	dh_makeshlibs -s
	dh_installdeb -s
	dh_shlibdeps -s
	dh_gencontrol -s
	dh_md5sums -s
	dh_builddeb -s

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch
