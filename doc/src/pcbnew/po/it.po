"        posy = yend\n"
"        xend = pad_s0_pos.x - (shl_width/2 + linewidth + margin*2)\n"
"        self.draw.Line(xstart, posy, xend, posy)\n"
msgstr ""
"        posy = yend\n"
"        xend = pad_s0_pos.x - (shl_width/2 + linewidth + margin*2)\n"
"        self.draw.Line(xstart, posy, xend, posy)\n"

#. type: delimited block -
